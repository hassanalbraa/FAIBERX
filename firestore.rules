rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // In a real app, this would check a custom claim, not email.
      return isSignedIn() && request.auth.token.email == 'admin@example.com';
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Products: Publicly readable, admin-only writes.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User data collection and subcollections
    match /users/{userId} {
      // Create: Any signed-in user can create their own document.
      allow create: if isOwner(userId);
      
      // Get/Update: A user can get/update their own profile. An admin can get/update any profile.
      allow get, update: if isOwner(userId) || isAdmin();
      
      // List: ONLY an admin can list the users collection.
      allow list: if isAdmin();

      // Addresses: A user has full control over their own addresses subcollection.
      match /addresses/{addressId} {
        allow read, write: if isOwner(userId);
      }

      // Orders: A user has full control over their own orders subcollection.
      match /orders/{orderId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Admins can read all orders via a collectionGroup query.
    // This is separate from the user-specific rule above.
    match /{path=**}/orders/{orderId} {
      allow read: if isAdmin();
    }

    // roles_admin should not be client-writable to prevent privilege escalation.
    match /roles_admin/{adminId} {
      allow read, write: if false;
    }
  }
}

    