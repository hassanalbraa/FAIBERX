rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // In a real app, this would check a custom claim, not email.
      return isSignedIn() && request.auth.token.email == 'admin@example.com';
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Products: Publicly readable, admin-only writes.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User data collection
    match /users/{userId} {
      // Create: Any signed-in user can create their own document.
      allow create: if isOwner(userId);
      
      // Get/Update: A user can get/update their own profile. An admin can get/update any profile.
      allow get, update: if isOwner(userId) || isAdmin();
      
      // List: ONLY an admin can list the users collection.
      // This rule is now safe because it does not interfere with subcollection access.
      allow list: if isAdmin();

      // Addresses: A user has full control over their own addresses subcollection.
      // This rule will now work correctly without the conflicting parent 'list' rule.
      match /addresses/{addressId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Orders: Users can create/read their own. Admins have full access.
    match /orders/{orderId} {
        // WRITE rules: Who can change data?
        allow write: if isAdmin(); // Admins can do any write (update, delete).
        allow create: if isSignedIn() && isOwner(request.resource.data.userId); // Users can create their own.

        // READ rules: Who can see data?
        // Get: Admins can get any order. Users can only get their own.
        allow get: if isAdmin() || (isSignedIn() && isOwner(resource.data.userId));
        // List: Admins can list all orders. Users can only list their own orders via a query.
        allow list: if isAdmin() || (isSignedIn() && request.query.where.size() > 0 && request.query.where.userId == request.auth.uid);
    }


    // roles_admin should not be client-writable to prevent privilege escalation.
    match /roles_admin/{adminId} {
      allow read, write: if false;
    }
  }
}
